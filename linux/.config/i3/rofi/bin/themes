DIR="$HOME/.config/i3"
BSP="$HOME/.config/i3/themes"
rofi_command="rofi -theme $DIR/rofi/themes/themes.rasi"

# Themes
theme_1=" Gruvbox"
theme_2=" Github Dark"
theme_3=" Github Light"

# Variable passed to rofi
options="$theme_1\n$theme_2\n$theme_3"

chosen="$(echo -e "$options" | $rofi_command -p "Available themes : (20)" -dmenu -selected-row 0)"
case $chosen in
    $theme_1)
        bash ${BSP}/set-theme  'miramare.jpg' 'beach' 'Gruvbox' 'Arc-Circle' 'Fluent'
        ;;
    $theme_2)
        bash ${BSP}/set-theme  'miramare.jpg' 'blade' 'Arc-Lighter' 'Nordic-Folders' 'LyraS'
        ;;
    $theme_3)
        bash ${BSP}/set-theme  'miramare.jpg' 'bouquet' 'Arc-dark' 'Luna-Dark' 'Future-dark'
        ;;
esac
