" vim: ft=vim

" Settings
set newtaburl=https://start.duckduckgo.com/
set guinavbar=oninput
set guitabbar=never
set adblocker=update
set cache=clearonquit
set devtoolsposition=window
set downloadmethod=automatic
set downloadpath=~/Downloads/

" Mappings
imap <C-e> <editWithVim>
emap <C-k> <nextSuggestion>
emap <C-j> <prevSuggestion>
cmap <C-k> <nextSuggestion>
cmap <C-j> <prevSuggestion>

set searchwords=
set searchwords+=dd~https://duckduckgo.com/?q=%s
set searchwords+=img~https://duckduckgo.com/?q=%s&iax=images&ia=images
set searchwords+=git~https://github.com/search?q=%s
set searchwords+=maps~https://www.google.com/maps?hl=en&q=%s
set searchwords+=r~https://reddit.com/r/%s
set searchwords+=econse~https://economics.stackexchange.com/search?q=%s
set searchwords+=finse~https://money.stackexchange.com/search?q=%s
set searchwords+=imdb~imdb.com/find?ref_=nv_sr_fn&q=%s&s=all
set searchwords+=genius~https://genius.com/search?q=%s
set searchwords+=nyt~https://www.nytimes.com/search?query=%s
set searchwords+=bbc~https://www.bbc.co.uk/search?q=%s

" Colors (By default turn off dark reader but configure the bg)
set nodarkreader
set darkreaderbg=#262626
colorscheme gruvbox
