sudo yabai --load-sa

yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

#Theme specific colors
Active=927f70
gruvInactive=32302f
gruvLight=c6b580

# global settings
yabai -m config mouse_follows_focus          off
yabai -m config focus_follows_mouse          off
yabai -m config window_placement             second_child
yabai -m config window_topmost               on
yabai -m config window_opacity               on
yabai -m config window_opacity_duration      0.9
yabai -m config window_shadow                off
yabai -m config active_window_opacity        1.00
yabai -m config normal_window_opacity        0.85
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 off
yabai -m config mouse_modifier               fn
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize

# Bar
yabai -m config external_bar                 all:28:0

# Boarders
yabai -m config window_border                on
yabai -m config window_border_width          5
yabai -m config active_window_border_color   0xff$Active
yabai -m config insert_feedback_color        0xff$Active
yabai -m config normal_window_border_color   0xff$gruvInactive

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  20
yabai -m config bottom_padding               20
yabai -m config left_padding                 20
yabai -m config right_padding                20
yabai -m config window_gap                   20

# Running through float windows
yabai -m space 1 --label 一
yabai -m space 2 --label 二
yabai -m space 3 --label 三
yabai -m space 4 --label 四
yabai -m space 5 --label 五
yabai -m space 6 --label 六
yabai -m space 7 --label 七
yabai -m space 8 --label 八
yabai -m space 9 --label 九
yabai -m space 10 --label 十

yabai -m config --space 1 layout             stack
yabai -m config --space 5 layout             float
yabai -m config --space 6 layout             float

# Rules for specific apps to launch and be managed by yabai
yabai -m rule --add app=Spotify --space 6
yabai -m rule --add app=Spotify manage=off
yabai -m rule --add app="discord Canary" --space 5
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="zoom.us" manage=off
yabai -m rule --add app=Finder manage=off
yabai -m rule --add app=Safari opacity=1
yabai -m rule --add app="Google Chrome" opacity=1
yabai -m rule --add app=mpv topmost=on opacity=1
yabai -m rule --add app=Dashlane manage=off
yabai -m rule --add app=Godot manage=off
yabai -m rule --add app=Discord manage=off
yabai -m rule --add app=Übersicht manage=off
yabai -m rule --add app=BetterTouchTool manage=off

# signals to map focus how I like it
yabai -m signal --add event=window_destroyed action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse"
yabai -m signal --add event=application_terminated action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse"

